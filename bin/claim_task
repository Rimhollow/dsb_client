#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)
require './lib/dsb'

client = Dsb::Client.new(File.join('config', 'connection.yml'))

type = ARGV[0]

daemon = Dsb::Daemon.new(:type => type, :client => client)
daemon.claim_task
ap {:package => daemon.package.data, :task => daemon.task.data}
